<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="手机防盗"
        android:textSize="40dp"
        android:textColor="#000000"
        android:background="#8800FF00"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/lostfind_text_phone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/lostfind_image_lock"
            android:layout_alignParentRight="true"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/lock"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <TextView
        android:background="@drawable/text_shape"
        android:clickable="true"
        android:onClick="reEnterSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新进入设置向导"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"/>

    <View
        android:layout_marginTop="5dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <TextView
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能简介"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"/>

    <TextView
        android:text="GPS追踪：#*location*#"
        style="@style/setup1_text_content"
        android:drawableLeft="@android:drawable/star_big_on"/>

    <TextView
        android:text="播放报警音乐：#*alarm*#"
        style="@style/setup1_text_content"
        android:drawableLeft="@android:drawable/star_big_on"/>

    <TextView
        android:text="远程删除数据：#*wipedata*#"
        style="@style/setup1_text_content"
        android:drawableLeft="@android:drawable/star_big_on"/>

    <TextView
        android:text="远程锁屏：#*lockscreen"
        style="@style/setup1_text_content"
        android:drawableLeft="@android:drawable/star_big_on"/>

</LinearLayout>